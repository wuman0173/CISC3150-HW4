import java.util.*;

class MyString
{
private final char[] wassup;
private final int offset;

	public static void main(String[] args)
	{
		char[] theArray = new char[] 
			{
			'h', 'E', 'L', 'L', 'o'
			};
		MyString theNewString = new MyString(theArray);

		System.out.println(theNewString); //This prints out the Hash for the Array. As of Now?
		System.out.println(theNewString.charAt(3));
		System.out.println(theNewString.length());
		System.out.println(theNewString.substring(1,3));
		System.out.println(theNewString.toString());

		
	}
	public MyString(char[] chars)
	{
	this.offset = 0;
	this.wassup = chars;
	}
	public MyString(int offset, int count, char[] chars)
	{
	this.wassup = chars;
	this.offset = offset;
	}
	public char charAt(int index)
	{
		char[] temparray = wassup;
		return temparray[index];
	}
	public int length() //Im not using the string.length, im using the array.length. Does this count?
	{
		char[] temparray = wassup;
		return temparray.length;
	
	}
	public MyString substring(int begin, int end)
	{
		return new MyString(offset + begin, end - begin, wassup);
	}/*
